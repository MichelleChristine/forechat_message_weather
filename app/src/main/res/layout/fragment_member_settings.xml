<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
	android:id = "@+id/linear_member_settings_container"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent"
	android:layout_margin = "10dp"
	android:orientation = "vertical">

	<!--Header-->


	<GridLayout
		android:id = "@+id/gl_member_settings"
		android:layout_width = "match_parent"
		android:layout_height = "match_parent"
		android:alignmentMode = "alignMargins"
		android:columnCount = "6"
		android:columnOrderPreserved = "false"
		android:orientation = "horizontal"
		android:rowOrderPreserved = "false">


		<!--Firstname-->
		<TextView
			android:layout_columnSpan = "6"
			android:layout_gravity = "fill_horizontal"
			android:text = "First Name" />

		<EditText
			android:id = "@+id/et_member_settings_firstname"
			android:layout_width = "0dp"
			android:layout_columnSpan = "5"
			android:layout_gravity = "left|fill_horizontal"
			android:background = "@drawable/edittext_states"
			android:inputType = "textPersonName"
			android:padding = "3dp" />

		<Button
			android:id = "@+id/btn_member_settings_firstname"
			android:layout_columnSpan = "1"
			android:drawableLeft = "@drawable/ic_settings_edit_memberinfo" />

		<!--Lastname-->
		<TextView
			android:layout_columnSpan = "6"
			android:layout_gravity = "fill_horizontal"
			android:text = "Last Name" />

		<EditText
			android:id = "@+id/et_member_settings_lastname"
			android:layout_width = "0dp"
			android:layout_columnSpan = "5"
			android:layout_gravity = "left|fill_horizontal"
			android:background = "@drawable/edittext_states"
			android:inputType = "textPersonName"
			android:padding = "3dp" />

		<Button
			android:id = "@+id/btn_member_settings_lastname"
			android:layout_columnSpan = "1"
			android:drawableLeft = "@drawable/ic_settings_edit_memberinfo" />

		<!--Username-->
		<TextView
			android:layout_columnSpan = "6"
			android:layout_gravity = "fill_horizontal"
			android:text = "Username" />

		<EditText
			android:id = "@+id/et_member_settings_username"
			android:layout_width = "0dp"
			android:layout_columnSpan = "5"
			android:layout_gravity = "left|fill_horizontal"
			android:background = "@drawable/edittext_states"
			android:inputType = "textPersonName"
			android:padding = "3dp" />

		<Button
			android:id = "@+id/btn_member_settings_username"
			android:layout_columnSpan = "1"
			android:drawableLeft = "@drawable/ic_settings_edit_memberinfo" />

		<!--email-->
		<TextView
			android:layout_columnSpan = "6"
			android:layout_gravity = "fill_horizontal"
			android:text = "Email" />

		<EditText
			android:id = "@+id/et_member_settings_email"
			android:layout_width = "0dp"
			android:layout_columnSpan = "5"
			android:layout_gravity = "left|fill_horizontal"
			android:background = "@drawable/edittext_states"
			android:inputType = "textEmailAddress"
			android:padding = "3dp" />

		<!--Testing purposes only while email endpoint is not set up-->
		<Space android:layout_columnSpan = "1" />

		<!--<Button-->
		<!--android:id="@+id/btn_member_settings_email"-->
		<!--android:drawableLeft="@drawable/ic_settings_edit_memberinfo"-->
		<!--android:layout_columnSpan="1"-->
		<!--android:tag="email_btn"/>-->

		<!--Password-->
		<TextView
			android:layout_columnSpan = "6"
			android:layout_gravity = "fill_horizontal"
			android:text = "Password" />

		<EditText
			android:id = "@+id/et_member_settings_password"
			android:layout_width = "0dp"
			android:layout_columnSpan = "5"
			android:layout_gravity = "left|fill_horizontal"
			android:background = "@drawable/edittext_states"
			android:inputType = "textPassword"
			android:padding = "3dp" />

		<Button
			android:id = "@+id/btn_member_settings_password"
			android:layout_columnSpan = "1"
			android:drawableLeft = "@drawable/ic_settings_edit_memberinfo" />

		<!--Confirm Password-->
		<TextView
			android:id = "@+id/tv_member_settings_confirmpass"
			android:layout_columnSpan = "6"
			android:layout_gravity = "fill_horizontal"
			android:text = "Confirm Password" />

		<EditText
			android:id = "@+id/et_member_settings_confirm_password"
			android:layout_width = "0dp"
			android:layout_columnSpan = "5"
			android:layout_gravity = "fill_horizontal"
			android:background = "@drawable/edittext_states"
			android:inputType = "textPassword"
			android:padding = "3dp" />

		<Space android:layout_columnSpan = "1" />


		<!--Apply Button-->
		<Button
			android:id = "@+id/btn_member_settings_apply"
			android:layout_columnSpan = "3"
			android:layout_gravity = "right"
			android:layout_margin = "5dp"
			android:background = "?attr/colorPrimaryDark"
			android:text = "Apply" />

		<!--Cancel Button-->
		<Button
			android:id = "@+id/btn_member_settings_cancel"
			android:layout_columnSpan = "3"
			android:layout_margin = "5dp"
			android:background = "#ff0000"
			android:text = "Cancel" />


	</GridLayout>


</LinearLayout>