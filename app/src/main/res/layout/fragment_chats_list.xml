<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	xmlns:tools = "http://schemas.android.com/tools"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent"
	android:orientation = "vertical">

	<Button
		android:id = "@+id/btn_newChat_chats"
		style = "@style/Widget.AppCompat.Button.Borderless.Colored"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:layout_gravity = "center_horizontal"
		android:text = "@string/chats_list_newChat"
		android:textColor = "@color/colorBluePurple" />

	<android.support.v7.widget.RecyclerView xmlns:android = "http://schemas.android.com/apk/res/android"
		xmlns:app = "http://schemas.android.com/apk/res-auto"
		xmlns:tools = "http://schemas.android.com/tools"
		android:id = "@+id/list"
		android:name = "thedankdevs.tcss450.uw.edu.tddevschat.HomeActivity.Chats.ChatsFragment"
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		android:layout_marginLeft = "16dp"
		android:layout_marginRight = "16dp"
		app:layoutManager = "LinearLayoutManager"
		tools:context = ".HomeActivity.Chats.ChatsFragment"
		tools:listitem = "@layout/fragment_chats">

	</android.support.v7.widget.RecyclerView>
</LinearLayout>